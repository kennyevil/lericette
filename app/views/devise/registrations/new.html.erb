<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

<div class="row">
  <div class="large-10 large-centered columns">
  <fieldset>
    <legend>Sign up</legend>
    <%= devise_error_messages! %>
   
    <div class="row"> 
      <div class="large-10 large-centered columns"><%= f.text_field :username, :autofocus => true %></div>
    </div>

    <div class="row">
      <div class="large-10 large-centered columns"><%= f.text_field :name, :autofocus => true%></div>
    </div>

    <div class="row">
      <div class="large-10 large-centered columns"><%= f.email_field :email, :autofocus => true %></div>
    </div>

    <div class="row">
      <div class="large-10 large-centered columns"><%= f.password_field :password, :autofocus => true %></div>
    </div>

    <div class="row">
      <div class="large-10 large-centered columns"><%= f.password_field :password_confirmation, :autofocus => true %></div>
    </div>

    <div class="button.small"><%= f.submit "Sign up" %></div>
  </fieldset>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
